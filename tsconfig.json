{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
      // "@/app/*": ["./src/app/*"],
      // "@/constants/*": ["./src/constants/*"],
      // "@/features/*": ["./src/features/*"],
      // "@/lib/*": ["./src/lib/*"],
      // "@/mocks/*": ["./src/mocks/*"],
      // "@/themes/*": ["./src/themes/*"],
      // "@/utils/*": ["./src/utils/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "jest.config.mjs",
    "jest.setup.js",
    ".storybook/**/*",
    "commitlint.config.ts"
  ],
  "exclude": ["node_modules"]
}
